<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
    <%- include('../partials/header'); %>
</header>

<main>
    <div class="container center">
      <form id="form" method="POST" action="/applications" enctype="multipart/form-data">
          <div class="form-group">
            <div class="row">
                <div class="col">
                  <input type="text" class="form-control" id="firstname" placeholder="Firstname" name="firstname">
                </div>
                <div class="col">
                  <input type="text" class="form-control" id="lastname" placeholder="Lastname" name="lastname">
                </div>
            </div>
          </div>
          <div class="form-group">
              <input type="email" class="form-control" id="email" placeholder="Email" name="email">
          </div>

          <div class="form-group">
            <input type="tel" class="form-control" id="phone" placeholder="Phone Number" name="phone">
          </div>

          <div class="form-group">
            <input type="text" class="form-control" id="location" placeholder="Location" name="location">
          </div>

          <div class="form-group">
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="customFile" name="file" accept=".pdf">
            <label class="custom-file-label" for="customFile" id="fileName"></label>
            </div>
          </div>

          <div class="form-group text-center">
              <button type="submit" class="btn btn-info btn-lg btn-submit" id="apply"> Submit </button>
          </div>
    </div>
    
      </form>
    </div>
</main>

<footer>
    <%- include('../partials/footer'); %>
</footer>

<script>
  let fileName = 'Choose File'
  const file = document.getElementById('customFile');
  const label = document.getElementById('fileName');
  label.innerText = fileName;

  file.addEventListener('change', (event) => {
    fileName = event.target.files[0].name;
    label.innerText = fileName;
  });
  
</script>
</body>
</html>

<style>
    body { 
      padding-top:50px; 
    }

    main{
        width: 100%;
        height: 100%;
        padding-top: 25px;
    }

    .center{
        margin: auto;
        width: 65%;
        height: 100%;
        padding: 10px;
    }

    .btn-submit{
        width: 50%;
    }
</style>
